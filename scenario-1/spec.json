{
  "projects": [
    {
      "name": "project.core",
      "pattern": "**/com/product/core/**"
    },
    {
      "name": "product.io",
      "pattern": "**/com/product/io/**",
      "allowed": [ "product.core" ]
    },
    {
      "name": "product.db",
      "pattern": "**/com/product/db/**",
      "allowed": [ "product.core" ]
    },
    {
      "name": "product.rest",
      "pattern": "**/com/product/rest/**",
      "allowed": [ "product.db", "product.io", "product.core" ]
    }
  ],
  "layers": [
    {
      "name": "persistence",
      "pattern": "**/persistence/**"
    },
    {
      "name": "domain",
      "pattern": "**/domain/**",
      "allowed": [ "persistence" ]
    },
    {
      "name": "api",
      "pattern": "**/api/**",
      "allowed": [ "domain" ]
    }
  ]
}
